        </ImageView-->
        <Button
            android:id="@+id/button_recommend_cheater1"
            android:background="@color/colorTransparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom">
        </Button>
        <Button
            android:id="@+id/button_recommend_cheater2"
            android:background="@color/colorTransparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp">
        </Button>
        <Button
            android:id="@+id/button_recommend_cheater3"
            android:background="@color/colorTransparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp">
        </Button>
        <Button
            android:id="@+id/button_recommend_cheater4"
            android:background="@color/colorTransparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="60dp">
        </Button>
    </FrameLayout>


