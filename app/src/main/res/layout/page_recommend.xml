<?xml version="1.0" encoding="utf-8"?>
<com.example.emoid_cv6fox.UI.Recommend.FrameRecommend
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <FrameLayout
        android:background="@drawable/shape_recommend_section_top"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:text="识别结果"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/styleLevel_004"

            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/textview_recommend_result"
            android:text="Neut"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="@color/face2"
            android:fontFamily="@font/caveat_bold"
            android:padding="5dp"
            android:gravity="center_horizontal|top"
            android:background="@drawable/shape_recommend_section_top_result"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:elevation="5dp">
        </TextView>
        <com.example.emoid_cv6fox.UI.Recommend.FramePie
            android:layout_gravity="center_vertical|right"
            android:layout_width="130dp"
            android:layout_height="130dp">
            <com.example.emoid_cv6fox.UI.ViewFace
                android:id="@+id/viewface_recommend_result"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:type="0"
                app:form="1">
            </com.example.emoid_cv6fox.UI.ViewFace>
        </com.example.emoid_cv6fox.UI.Recommend.FramePie>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--ImageView
            android:src="@drawable/music"
            android:layout_gravity="center_horizontal"
