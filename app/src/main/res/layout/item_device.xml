<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_connect_item_device"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@drawable/dr_item_device"
    android:gravity="center_vertical"
    android:focusable="true"
    android:clickable="true">
    <ImageView
        android:id="@+id/imageview_connect_item_device_type"
        android:src="@drawable/item_device_1"
        android:scaleType="centerInside"
        android:layout_margin="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
    </ImageView>
    <TextView
        android:id="@+id/textview_connect_item_device_name"
        android:fontFamily="@font/crete_round"
        android:text="Oppo"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_connect_item_device_signal"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/item_device_signal_3">
        </ImageView>
    </FrameLayout>
</LinearLayout>
